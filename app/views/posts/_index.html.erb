<% @posts.each do |post| %>
    <div class="panel panel-success" id="<%= post.id %>">
      <div class="panel-heading">
        <h3 class="panel-title">Title: <%= post.title %></h3>
      </div>
      <div class="panel-body">
        <%= post.body %>
      </div>
      <div class="panel-footer">
        <%= link_to "Edit", edit_post_path(post), remote: true, class: "btn" %>
        <%= link_to "Delete", post_delete_path(post), remote: true, class: "btn btn-danger" %>
      </div>
    </div>
<% end %>